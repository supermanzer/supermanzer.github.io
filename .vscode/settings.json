{
  "vetur.format.defaultFormatter.html": "none",
  // Set the default
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[vue]": {
    "editor.formatOnSave": true
  },
  "cSpell.words": ["dendron", "nuxt", "pypi", "Supermanzer"]
}
